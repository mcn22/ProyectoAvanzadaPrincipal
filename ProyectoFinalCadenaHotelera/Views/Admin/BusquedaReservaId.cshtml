@model ProyectoFinalCadenaHotelera.Models.Reserva

@{
    ViewBag.Title = "Busqueda de reserva";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Busqueda de reservas</h2>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    <h4>Busqueda de por Id</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ReservaId, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-3">
            @Html.EditorFor(model => model.ReservaId, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReservaId, "", new { @class = "text-danger" })
        </div>
        <div class="col-md-1">
            <input type="submit" value="Buscar" class="btn btn-primary" />
        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
