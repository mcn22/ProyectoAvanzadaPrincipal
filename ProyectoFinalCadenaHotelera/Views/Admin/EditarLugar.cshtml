@model ProyectoFinalCadenaHotelera.Models.Hotel_Empleado

@{
    ViewBag.Title = "EditarLugar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    List<SelectListItem> listaHotelesDropDown = new List<SelectListItem>();
    foreach (var item in ViewBag.listaHoteles)
    {
        listaHotelesDropDown.Add(new SelectListItem
        {
            Text = item.nombre_hotel,
            Value = item.HotelId.ToString()
        });
    }
}

<h2>Editar lugar de trabajo</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.ApplicationUser.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.ApplicationUser.Email, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Hotel.nombre_hotel, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HotelId, listaHotelesDropDown, "-- Seleccionar --")
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
