@model IEnumerable<ProyectoFinalCadenaHotelera.Models.Hotel_Empleado>

@{
    ViewBag.Title = "GestionEmpleados";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Gestion de empleados</h2>

<p>
    @Html.ActionLink("Crear empleado", "CrearEmpleado")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Hotel.nombre_hotel)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Hotel.nombre_hotel)
        </td>
        <td>
            @Html.ActionLink("Cambiar ubicación", "EditarLugar", new { id=item.Id }) |
            @Html.ActionLink("Eliminar", "EliminarEmpleado", new { id=item.Id.ToString() })
        </td>
    </tr>
}

</table>
