@model IEnumerable<ProyectoFinalCadenaHotelera.Models.Reserva>

@{
    ViewBag.Title = "ListaReservasHotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Lista de reservas</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.fecha_llegada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_salida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costo_total)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saldo_actual)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_llegada)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_salida)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costo_total)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.saldo_actual)
            </td>
            <td>
                @Html.ActionLink("Detalles", "DetalleReserva", new { id = item.ReservaId }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.ReservaId })
            </td>
        </tr>
    }

</table>
