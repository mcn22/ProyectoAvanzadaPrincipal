@model IEnumerable<ProyectoFinalCadenaHotelera.Models.Reserva>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ApplicationUser.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ReservaId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Habitacion.num_habitacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_llegada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_salida)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.saldo_actual)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ApplicationUser.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ReservaId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Habitacion.num_habitacion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_llegada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.fecha_salida)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.saldo_actual)
        </td>
        <td>
            @Html.ActionLink("Detalle", "DetalleReserva", new { id = item.ReservaId, idHotel = ViewBag.idHotel }) |
            @Html.ActionLink("Confirmar pago", "Edit", new { id = item.ReservaId })
        </td>
    </tr>
}

</table>
